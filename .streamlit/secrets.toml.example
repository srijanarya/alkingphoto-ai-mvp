# TalkingPhoto API Keys Configuration
# Copy this file to secrets.toml and fill in your actual API keys
# NEVER commit secrets.toml to git!

[heygen]
api_key = "your_heygen_api_key_here"
api_endpoint = "https://api.heygen.com/v1"

[d_id]
api_key = "your_d_id_api_key_here"
api_endpoint = "https://api.d-id.com"

[synthesia]
api_key = "your_synthesia_api_key_here"
api_endpoint = "https://api.synthesia.io"

[stripe]
publishable_key = "pk_test_your_stripe_publishable_key"
secret_key = "sk_test_your_stripe_secret_key"
webhook_secret = "whsec_your_webhook_secret"

[razorpay]
key_id = "rzp_test_your_razorpay_key"
key_secret = "your_razorpay_secret"

[analytics]
google_analytics_id = "G-XXXXXXXXXX"
mixpanel_token = "your_mixpanel_token"
posthog_api_key = "your_posthog_api_key"

[cloudinary]
cloud_name = "your_cloud_name"
api_key = "your_api_key"
api_secret = "your_api_secret"

[database]
connection_string = "postgresql://user:password@localhost/dbname"

[redis]
url = "redis://localhost:6379"

[email]
sendgrid_api_key = "your_sendgrid_api_key"
from_email = "noreply@talkingphoto.ai"

[sentry]
dsn = "your_sentry_dsn"
environment = "production"